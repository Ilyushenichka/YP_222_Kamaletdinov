<Window x:Class="_222_Titorenko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_222_Titorenko"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Background="{DynamicResource AccentColor1}">


    <Grid>
        <Grid.RowDefinitions>
            <!-- Верхняя строка: фиксированная высота 45 -->
            <RowDefinition Height="45" />

            <!-- Средняя строка: занимает всё оставшееся пространство -->
            <RowDefinition Height="*" />

            <!-- Нижняя строка: фиксированная высота 45 -->
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <!-- Средняя строка с Frame -->
        <Frame x:Name="MainFrame"
           Grid.Row="1"
           HorizontalAlignment="Stretch"
           VerticalAlignment="Stretch"
           NavigationUIVisibility="Hidden" />         <!-- Скрытие навигационной панели ненужной -->

        <TextBlock x:Name="DateTimeNow"
           Grid.Row="2"
           VerticalAlignment="Center"
           HorizontalAlignment="Right"
           Margin="0,0,10,0"
           FontSize="14"
           FontWeight="Bold"/>
        <!-- Верхняя панель -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="BackButton"
            Content="Назад"
            Width="100"
            Margin="10,0,0,0"
            Click="BackButton_Click"/>

            <Button Content="Светлая тема"
            Width="120"
            Margin="10,0,0,0"
            Click="LightTheme_Click"/>

            <Button Content="Тёмная тема"
            Width="120"
            Margin="10,0,0,0"
            Click="DarkTheme_Click"/>
        </StackPanel>

    </Grid>

</Window>
