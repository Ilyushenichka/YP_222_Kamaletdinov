<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 🌙 ТЁМНАЯ ТЕМА -->

    <!-- 🎨 Палитра -->
    <SolidColorBrush x:Key="PrimaryColor1" Color="#3E5550"/>
    <SolidColorBrush x:Key="PrimaryColor2" Color="#A65B63"/>
    <SolidColorBrush x:Key="AccentColor1"  Color="#2B2B2B"/>
    <!-- фон приложения -->
    <SolidColorBrush x:Key="AccentColor2"  Color="#3C3C3C"/>
    <!-- панели / блоки -->
    <SolidColorBrush x:Key="TextWhite"     Color="#FFFFFF"/>

    <!-- 🪟 Окна -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource AccentColor1}"/>
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
    </Style>

    <!-- 🧾 Текст -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
    </Style>

    <!-- 🟩 Кнопки -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinHeight" Value="35"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1.5"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="{StaticResource PrimaryColor2}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="#883E5550"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 🔤 TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource AccentColor2}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- 🔒 PasswordBox -->
    <Style TargetType="PasswordBox">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource AccentColor2}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
        <Setter Property="CaretBrush" Value="White"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    <!-- 📦 ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource AccentColor2}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <!-- рамка -->
                        <Border x:Name="MainBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4"/>

                        <!-- Текст выбранного элемента -->
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      RecognizesAccessKey="True"/>

                        <!-- Стрелочка -->
                        <ToggleButton x:Name="ToggleButton"
                                  Grid.Column="2"
                                  IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  Focusable="False"
                                  ClickMode="Press"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="0"
                                  HorizontalAlignment="Right"
                                  VerticalAlignment="Center"
                                  Width="22"
                                  Foreground="{StaticResource TextWhite}">
                            <TextBlock Text="▼" FontSize="10" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </ToggleButton>

                        <!-- Popup со списком -->
                        <Popup x:Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Fade">
                            <Border x:Name="DropDownBorder"
                                Background="{StaticResource AccentColor2}"
                                BorderBrush="{StaticResource PrimaryColor2}"
                                BorderThickness="1"
                                CornerRadius="3"
                                SnapsToDevicePixels="True">
                                <ScrollViewer CanContentScroll="True" MaxHeight="200">
                                    <StackPanel IsItemsHost="True" />
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="Background" Value="{StaticResource PrimaryColor1}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- 📋 Элементы ComboBox -->
    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource AccentColor2}"/>
        <!-- фон пунктов -->
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5,3"/>

        <Style.Triggers>
            <!-- Наведение -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#222222"/>
                <!-- тёмно-чёрный -->
            </Trigger>
            <!-- Выбранный элемент -->
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryColor1}"/>
                <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 📊 DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource AccentColor1}"/>
        <Setter Property="RowBackground" Value="{StaticResource AccentColor2}"/>
        <Setter Property="AlternatingRowBackground" Value="#333333"/>
        <Setter Property="GridLinesVisibility" Value="None"/>
    </Style>

    <!-- 📄 DataGrid заголовки -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor1}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- 📋 Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
    </Style>

    <SolidColorBrush x:Key="CardBackground" Color="#2E2E2E"/>
    <SolidColorBrush x:Key="TextMain" Color="#FFFFFF"/>
    <!-- белый текст -->

    <!-- фон карточек -->


</ResourceDictionary>
