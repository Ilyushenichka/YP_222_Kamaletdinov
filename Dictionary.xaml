<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ☀️ СВЕТЛАЯ ТЕМА -->

    <!-- 🎨 Палитра -->
    <SolidColorBrush x:Key="PrimaryColor1" Color="#B5D5CA"/>
    <SolidColorBrush x:Key="PrimaryColor2" Color="#E0A9AF"/>
    <SolidColorBrush x:Key="AccentColor1"  Color="#D1EEFC"/>
    <!-- фон приложения -->
    <SolidColorBrush x:Key="AccentColor2"  Color="#FFFED6"/>
    <!-- панели -->
    <SolidColorBrush x:Key="TextBlack"     Color="#000000"/>
    <SolidColorBrush x:Key="TextWhite"     Color="#FFFFFF"/>

    <!-- 🪟 Окна -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource AccentColor1}"/>
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
    </Style>

    <!-- 🧾 Текст -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
    </Style>

    <!-- 🟩 Кнопки -->
    <Style TargetType="Button">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor1}"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
        <Setter Property="FontFamily" Value="Tahoma"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="MinHeight" Value="35"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1.5"
                            CornerRadius="6">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="{StaticResource PrimaryColor2}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextWhite}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="#CCB77D84"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- 🔤 TextBox -->
    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
        <Setter Property="CaretBrush" Value="Black"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- 🔒 PasswordBox -->
    <Style TargetType="PasswordBox">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
        <Setter Property="CaretBrush" Value="Black"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- 📦 ComboBox -->
    <Style TargetType="ComboBox">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
    </Style>

    <Style TargetType="ComboBoxItem">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
        <Setter Property="Background" Value="White"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryColor1}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{StaticResource PrimaryColor2}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- 📊 DataGrid -->
    <Style TargetType="DataGrid">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="RowBackground" Value="White"/>
        <!-- обычные строки -->
        <Setter Property="AlternatingRowBackground" Value="#FFFBE8"/>
        <!-- тускло-жёлтый -->
        <Setter Property="GridLinesVisibility" Value="None"/>
        <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor2}"/>
    </Style>

    <!-- 📄 DataGrid заголовки -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor1}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>

    <!-- 📋 Label -->
    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource TextBlack}"/>
    </Style>

    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextMain" Color="#000000"/>
    <!-- чёрный текст -->

    <!-- фон карточек -->


</ResourceDictionary>
